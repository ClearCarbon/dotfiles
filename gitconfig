[user]
  name = NAME
  email = EMAIL
  # signingkey = /Users/yourusername/.ssh/id_rsa
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  di = diff
  dc = diff --cached
  amend = commit --ammend
  aa = add --all
  lg = log --no-merges
  log-merges = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = HOME/.gitignore
  autocrlf = input
  editor = vim
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[github]
  user = GITHUB
[push]
  default = upstream
[init]
  defaultBranch = main
[gpg]
  format = ssh
[commit]
  gpgsign = true